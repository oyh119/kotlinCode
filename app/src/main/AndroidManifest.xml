<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.mealkey.mkservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".MKAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.init.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.init.MainActivity" />
        <activity android:name=".business.table.RegionActivity" />
        <activity
            android:name=".business.init.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".business.order.OrderDishesActivity"
            android:label="@string/title_activity_order_dishes"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>